[color]
    ui = true
[alias]
    c = commit --verbose
    a = add
    ap = add -p
    co = checkout
    cp = checkout -p
    pl = pull
    ph = push
    s = status -sbu
    sh = stash
    sp = stash --patch
    d = diff
    sd = diff --staged
    wd = diff --word-diff
    r = remote
    b = branch
    l = log --pretty=format:'%Cred%h%Creset%x09  %Cgreen%ad%Creset%x09%C(bold blue)%an%Creset: %s'
    sha = rev-parse --short HEAD
    pullall = !pullall
    graph = !git l --graph
    mylog = !git l --author=\"$(git config user.name)\"
    shove = push origin HEAD
    ready = rebase -i @{u}
    staged = diff --staged
    amend = commit --amend -C HEAD
    undo = reset --soft HEAD^
    skip = update-index --skip-worktree
    unskip = update-index --no-skip-worktree
    skipped = !git ls-files -v | grep "^S " | sed 's/^S //g'
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed = !git ls-files -v | grep "^h " | sed 's/^h //g'
    changed = diff --name-only --diff-filter=M
[core]
    autocrlf = input
    excludesfile = ~/.gitignore
[branch]
    autosetuprebase = always
[http]
    sslVerify = false
[mergetool]
    keepBackup = true
[diff]
    algorithm = patience
[log]
    date = short
    abbrevCommit = true
[rerere]
    enabled = 1
[help]
    autocorrect = 1
[user]
    name = Adam Edgett
    email = AdamEdgett@gmail.com
    username = AdamEdgett
[include]
    path = ~/.gitconfig.local
