[color]
	ui = true
[alias]
        ci = commit
        co = checkout
        pl = pull
        ph = push
        s = status -sbu
        d = diff
        r = remote
        b = branch
        l = log --pretty=format:'%Cred%h%Creset%x09  %Cgreen%ad%Creset%x09%C(bold blue)%an%Creset: %s'
        graph = !git l --graph
        mylog = !git l --author=\"$(git config user.name)\"
        shove = push origin HEAD
        ready = rebase -i @{u}
        staged = diff --staged
        assume = update-index --assume-unchanged
        unassume = update-index --no-assume-unchanged
        assumed = !git ls-files -v | grep "^[[:lower:]]" | sed 's/^h //g'
        amend = commit --amend -C HEAD
        undo = reset --soft HEAD^
[core]
        excludesfile = ~/.gitignore
[http]
        sslVerify = false
[mergetool]
	keepBackup = true
[diff]
        algorithm = patience
[log]
        date = short
        abbrevCommit = true
[rerere]
        enabled = 1
[help]
	autocorrect = 1
[include]
        path = ~/.gituser
